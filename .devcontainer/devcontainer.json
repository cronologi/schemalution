{
  "name": "schemalution",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "vscode",
  "postCreateCommand": "make setup && uv pip install --python .venv/bin/python --upgrade matplotlib",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": [
          "packages"
        ],
        "python.analysis.typeCheckingMode": "standard"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.pyright",
        "charliermarsh.ruff",
        "openai.chatgpt"
      ]
    }
  }
}
